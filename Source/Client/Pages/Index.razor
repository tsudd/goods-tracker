@page "/"
@inject IStringLocalizer<SharedResource> Loc

<PageTitle>@Loc["HomePageTitle"]</PageTitle>
<div id="introCarousel" class="carousel slide mb-4" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#introCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#introCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#introCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="img/register_headline.jpg" alt="Register">
            <div class="dark-overlay"></div>
            <div class="container">
                <div class="carousel-caption text-start">
                    <h1>@Loc["GetAccountMessage"]</h1>
                    <p>@Loc["GetAccountCaption"]</p>
                    <p>
                        <a class="btn btn-lg btn-primary" href="register">@Loc["GetAccountButtonLabel"]</a>
                    </p>
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="img/browse_headline.jpg" alt="Browse">
            <div class="dark-overlay"></div>
            <div class="container">
                <div class="carousel-caption text-start">
                    <h1>@Loc["ExploreMoreMessage"]</h1>
                    <p>@Loc["ExploreMoreCaption"]</p>
                    <p>
                        <a class="btn btn-lg btn-primary" href="items">@Loc["ExploreMoreButtonLabel"]</a>
                    </p>
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="img/faq_headline.jpg" alt="Browse">
            <div class="dark-overlay"></div>
            <div class="container">
                <div class="carousel-caption text-start">
                    <h1>@Loc["QuestionMessage"]</h1>
                    <p>@Loc["QuestionCaption"]</p>
                    <p>
                        <a class="btn btn-lg btn-primary" href="faq">@Loc["QuestionButtonLabel"]</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#introCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#introCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

